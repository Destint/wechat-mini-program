.view-addMemory-contentBox {
  position: relative;
  margin: 10rpx 35rpx 0rpx 35rpx;
  border-bottom: 1rpx solid #467B73;
}

.textarea-addMemory-content {
  position: relative;
  font-size: 30rpx;
  width: 100%;
  height: 250rpx;
